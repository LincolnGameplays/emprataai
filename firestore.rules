rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============================================
    // 1. USERS COLLECTION (Mantenha a segurança atual)
    // ============================================
    match /users/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Bloqueia edição de campos sensíveis (créditos/plano) pelo front-end
      allow update: if request.auth != null 
                    && request.auth.uid == userId
                    && !request.resource.data.diff(resource.data)
                       .affectedKeys()
                       .hasAny(['credits', 'plan', 'subscriptionRenewsAt']);
    }

    // ============================================
    // 2. MENUS COLLECTION (Cardápio Digital)
    // ============================================
    match /menus/{menuId} {
      // PÚBLICO: Qualquer pessoa (mesmo sem login) pode ver o cardápio
      allow read: if true;
      
      // CRIAÇÃO: Só usuário logado pode criar, e deve ser dono do menu
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
      
      // EDIÇÃO: Apenas o dono pode editar ou deletar
      allow update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }

    // ============================================
    // 3. ORDERS COLLECTION (Pedidos do Cardápio)
    // ============================================
    match /orders/{orderId} {
      // CRIAÇÃO: Qualquer cliente (público) pode enviar um pedido
      allow create: if true; 
      
      // LEITURA: Apenas o dono do restaurante vê os pedidos dele (Dashboard)
      allow read: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      // EDIÇÃO: Apenas o dono pode mudar status (ex: 'pending' -> 'paid')
      allow update: if request.auth != null && resource.data.ownerId == request.auth.uid;
    }
  }
}